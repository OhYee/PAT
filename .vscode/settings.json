// 将设置放入此文件中以覆盖默认值和用户设置。
{   

    // 字体 字号 字形
    "editor.fontFamily": "'YaHei Consolas Hybrid',Consolas,'微软雅黑','Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 20,
    "editor.glyphMargin": true,


    "workbench.statusBar.visible": true,
    
    //拖拽
    "editor.dragAndDrop": true,

    //补全
    "C_Cpp.autocomplete": "Disabled",

    "editor.autoClosingBrackets": false,

    // 控制已更新文件的自动保存。接受的值:“off”、"afterDelay”、“onFocusChange”(编辑器失去焦点)、“onWindowChange”(窗口失去焦点)。如果设置为“afterDelay”，则可在 "files.autoSaveDelay" 中配置延迟。
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 1,

    // 控制终端的字体系列，这在编辑器中是默认的。fontFamily 的值。
    "terminal.integrated.fontFamily": "Consolas,'微软雅黑','Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontSize": 16,

    // 配置 glob 模式以排除文件和文件夹。
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    // 配置文件路径的 glob 模式以从文件监视排除。更改此设置要求重启。如果在启动时遇到 Code 消耗大量 CPU 时间，则可以排除大型文件夹以减少初始加载。
    "files.watcherExclude": {
        "**/.git/objects/**": true
    },
    
    //代码格式化
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "WebKit",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.intelliSenseEngine":"Tag Parser",
    "C_Cpp.intelliSenseEngineFallback": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",

    // 控制换行的行的缩进。可以是"none"、 "same" 或 "indent"。
    "editor.wrappingIndent": "indent",
    // 按 "Tab" 时插入空格。该设置在 `editor.detectIndentation` 启用时根据文件内容进行重写。
    "editor.insertSpaces": true,
    // 当打开文件时，将基于文件内容检测 "editor.tabSize" 和 "editor.insertSpaces"。
    "editor.detectIndentation": true,


    // 控制是否应换行。换行依据为 min(editor.wrappingColumn, viewportWidthInColumns)。
    "editor.wordWrap": "on",


    // 控制终端游标的样式。
    "terminal.integrated.cursorStyle": "line",
    // 控制终端游标是否闪烁。
    "terminal.integrated.cursorBlinking": true,
    // 控制终端保持在缓冲区的最大行数。
    "terminal.integrated.scrollback": 5000,

    // 控制是否显示 minimap
    "editor.minimap.enabled": true,
    
    "files.associations": {
        "*.cpp": "cpp",
        "ctime": "cpp",
        "iostream": "cpp",
        "array": "cpp",
        "initializer_list": "cpp",
        "rope": "cpp",
        "slist": "cpp",
        "valarray": "cpp",
        "ostream": "cpp",
        "iosfwd": "cpp",
        "cstdio": "cpp",
        "cstring": "cpp",
        "algorithm": "cpp",
        "*.tcc": "cpp",
        "atomic": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "cfenv": "cpp",
        "chrono": "cpp",
        "cinttypes": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "csetjmp": "cpp",
        "csignal": "cpp",
        "cstdarg": "cpp",
        "cstdint": "cpp",
        "cstdlib": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "exception": "cpp",
        "fstream": "cpp",
        "functional": "cpp",
        "future": "cpp",
        "iomanip": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "ratio": "cpp",
        "scoped_allocator": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "system_error": "cpp",
        "thread": "cpp",
        "type_traits": "cpp",
        "tuple": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "utility": "cpp",
        "vector": "cpp",
        "stdlib.h": "c",
        "libio.h": "c",
        "stdio.h": "c",
        "stdio2.h": "c",
        "inet.h": "c",
        "in.h": "c",
        "byteorder.h": "c",
        "little_endian.h": "c",
        "fcntl-linux.h": "c",
        "unp.h": "c",
        "timex.h": "c",
        "socket.h": "c",
        "time.h": "c",
        "types.h": "c",
        "unistd.h": "c",
        "memory.h": "c",
        "12.1.c": "cpp",
